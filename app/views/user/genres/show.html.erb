<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-responsive genre-bar">
        <thead>
          <tr>
            <th>
              ジャンル一覧
            </th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= link_to user_genre_path(genre.id) do%>
                  <%= genre.name %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-9">
      <%= render 'user/movies/movies', movies: @movies %>
    </div>
  </div>
</div>
