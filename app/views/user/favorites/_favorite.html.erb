<% if current_user.favorites.find_by(review_id: review.id) %>
  <%= link_to user_unfavorite_path(review.id), method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= review.favorites.count %>いいね
  <% end %>
<% else %>
  <%= link_to user_favorite_path(review.id), method: :post, remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= review.favorites.count %> いいね
  <% end %>
<% end %>

