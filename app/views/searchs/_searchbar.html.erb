<header class="searchbar">
    <div>
      <%= form_tag(searchs_search_path , method: :get) do %>
        <%= text_field(@search_content, :search_word)%>
        <%= select(@search_content, :search_model, [["作品","movie"],["ユーザー","user"]])%>
        <%= select(@search_content, :search_method, [["部分一致","partial_match"],["完全一致","perfect_match"]])%>
        <%= submit_tag "検索" %>
      <% end %>
    </div>
</header>
